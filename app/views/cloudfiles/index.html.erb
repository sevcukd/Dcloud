
<%= search_form_for @q do |f| %>
  <%= f.search_field :name_cont %>
  <%= f.submit %>
<% end %>


<% if @cloudfiles == [] %>
    <p>Жодного файлу не знайдено</p>
<% else %>
   <% @cloudfiles.each do |p| %>
	
    <% if p.security == true && current_user.id != p.user_id %>
    	
    <% else %>
    	<h1><%= p.name %></h1>
    	<h3>Опис:</h3>
   		<b><%= p.description %></b><br>
   		<%= link_to "Завантажити", p.ffile.url %>
   		<hr>
    <% end %>


   	<% if p.user_id == current_user.id %>
		<p><%= link_to "Редагувати", edit_cloudfile_path(p.id) %> |
		<%= link_to "Видалити", cloudfile_path(p.id), method: :delete %> |
	<% else %>

    <% end %>
    
<% end %>
<% end %>


             

